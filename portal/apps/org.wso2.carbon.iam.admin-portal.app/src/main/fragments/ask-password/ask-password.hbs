<div class="form-group password_strength_meter">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-5">
        <div class="well">

            <div class="form-group">
                <label class="control-label">{{i18n "users.email.address"}}
                    <span class="requiredAstrix"> *</span></label>
                <input type="email" class="form-control email" id="askPwdEmail" name="askPwdEmail"
                       placeholder="example@mail.com">
            </div>

            <div class="form-group">
                <label class="control-label">{{i18n "confirm.users.email.address"}}
                    <span class="requiredAstrix"> *</span></label>
                <input type="email" class="form-control email" id="askPwdDuplicateEmail"
                       name="askPwdDuplicateEmail"
                       placeholder={{i18n "sample.email.address"}}>
            </div>

        </div>
    </div>
</div>