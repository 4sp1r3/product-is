{{layout "unprivilege"}}
{{favicon "images/favicon.png" type="image/png"}}
{{title "Login | " @config.appName}}
{{css "css/user-portal.css"}}
{{js "js/script.js"}}
{{js "js/left-navigation.js"}}

{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>Login Error!</strong>
            {{errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{/if}}

    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
        <div class="data-container">
            <form class="form-horizontal" method="post">
                <h3>{{t "user-portal.user.login"}}</h3>

                <div class="form-group">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                        <div class="input-group input-wrap">
                            <input type="text" name="username" class="form-control" placeholder="Username">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                        <div class="input-group input-wrap">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                </div>
                <div class="form-group hidden-xs hidden-sm add-margin-bottom-5x" style="margin-left:5px;">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                        <label class="checkbox">
                            <input type="checkbox" checked="">
                            <span class="helper">Keep me signed in</span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                        <button type="submit" class="btn btn-default btn-primary add-margin-right-2x">Sign In</button>
                        <!--not yet implemented-->
                        <!--<button type="submit" class="btn btn-default btn-secondary hidden-xs hidden-sm">Go Back</button>-->
                    </div>
                </div>
                <!--not yet implemented-->
                <!--<a href="{{@contextPath}}/recover-password" class="add-margin-bottom-5x remove-margin-lg remove-margin-md">Forgot Password</a>-->
                <p class="hidden-xs hidden-sm">Don't have an account? <a href="{{@contextPath}}/signup">Register Now</a>
                </p>
            </form>
        </div>
    </div>
{{/fillZone}}
