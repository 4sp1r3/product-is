{{log this}}

{{#if hasUserQuestions}}
    {{#each userQuestions}}
        <div class="form-group add-margin-bottom-5x">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label class="control-label">{{i18n "question"}}</label>

                <p>{{question}}</p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <label for="input-sec-question" class="control-label">{{i18n "answer"}}</label>
                <input type="text" class="form-control" id="input-sec-question">
            </div>
        </div>
    {{/each}}
    <div class="form-group add-margin-top-5x">
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
            <button type="submit"
                    class="btn btn-default btn-primary add-margin-right-2x">{{i18n "recover"}}</button>
            <button type="submit"
                    class="btn btn-default btn-secondary hidden-xs hidden-sm">{{i18n "cancel"}}</button>
        </div>
    </div>
{{else}}
    <div class="form-group add-margin-bottom-5x">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="form-horizontal">
                <p>{{i18n "no.recovery.questions.answered"}}</p>
            </div>
        </div>
    </div>
{{/if}}